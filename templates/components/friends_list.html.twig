<div {{ attributes }}>
    <span class="text-danger mb-2 d-block">{{ errMessage }}</span>
    <input data-model="debounce(400)|query" type="text" class="form-control mb-3" placeholder="Search friends" />
    {% if app.debug %}
        {{ component('alert', {
            type: 'info',
            message: '(DEBUG) Users Selected: ' ~ usersSelected|join(", "),
            dismissible: false
        }) }}
    {% endif %}
    <div data-loading="action(create)|show">Saving...</div>
    <div class="list-group my-3">
        {% for user in this.users %}
            <div class="list-group-item">
                <div class="form-check">
                    <input
                        data-action="live#action" data-action-name="toggle(id={{ user.id }})"
                        class="form-check-input" type="checkbox" id="checkbox-{{ user.id }}"
                        {{ user.id in usersSelected ? "checked" : "" }} />
                    <label class="form-check-label" for="checkbox-{{ user.id }}">
                        @{{ user.username }}
                        {% if app.debug %}
                            {{ user.id }} <b>{{ user.id in usersSelected ? "true" : "false" }}</b>
                        {% endif %}
                    </label>
                </div>
            </div>
        {% endfor %}
        <button data-action="live#action" data-action-name="create" class="btn btn-primary mt-3">Create</button>
    </div>
</div>
